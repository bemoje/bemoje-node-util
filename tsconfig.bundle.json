{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    // Transpilation settings.
    "module": "ESNext",
    "target": "ESNext",

    // Output settings.
    "charset": "utf-8",
    "newLine": "LF",
    "sourceMap": true,
    "removeComments": false,

    // Type declaration settings.
    "declaration": true,
    "declarationDir": "types/",
    "declarationMap": true
  },
  "exclude": ["./tests/**/*"]
}
